# Stage 1: Runtime base
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
# Render uses $PORT
ENV ASPNETCORE_URLS=http://+:$PORT

# Stage 2: Build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy server project and restore dependencies
COPY ["Omnisend.Server/Omnisend.Server.csproj", "./"]
RUN dotnet restore "./Omnisend.Server.csproj"

# Copy all files and build
COPY . ./
RUN dotnet publish "./Omnisend.Server.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Stage 3: Final image
FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "Omnisend.Server.dll"]
